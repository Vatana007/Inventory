<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1.5dp"
    app:strokeColor="#F0F2F5"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgTransType"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@android:drawable/arrow_up_float"
            app:tint="#4CAF50"
            android:background="@drawable/shape_circle_green"
            android:backgroundTint="#F1F3F4"
            android:padding="10dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/tvTransName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1A1C1E"
                android:letterSpacing="0.01"/>

            <TextView
                android:id="@+id/tvTransDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oct 24, 2023 â€¢ 10:30 AM"
                android:textSize="12sp"
                android:textColor="#90A4AE"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvTransQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+50"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:background="@drawable/shape_circle_green"
            android:backgroundTint="#E8F5E9"
            android:paddingHorizontal="14dp"
            android:paddingVertical="6dp"
            android:gravity="center"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>